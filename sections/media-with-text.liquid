          "type": "range",
          "id": "border_opacity",
          "label": "Border opacity",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 100,
          "unit": "%"
        },
        {
          "type": "header",
          "content": "General"
        },
        {
          "type": "select",
          "id": "media_align_desktop",
          "label": "Media alignment on desktop",
          "default": "",
          "options": [
            { "value": "", "label": "Left" },
            { "value": "flex-desktop-row-reverse", "label": "Right" }
          ]
        },
        {
          "type": "select",
          "id": "media_border",
          "label": "Media border",
          "default": "img-thumbnail",
          "options": [
